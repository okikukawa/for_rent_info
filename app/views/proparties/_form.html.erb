<%= form_with(model:@proparty,local:true)do|f| %>
  <% if @proparty.errors.any? %>
    <div id="error_explanation">
      <h2><%= @proparty.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @proparty.errors.full_messages.each do|msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
    <%= f.fields_for :near_stations do |near_station| %><br>
      <h2>最寄り駅<%= near_station.index + 1 %></h2>
      <%= near_station.label :route_name %><br>
      <%= near_station.text_field :route_name %><br>
      <%= near_station.label :station_name %><br>
      <%= near_station.text_field :station_name %><br>
      <%= near_station.label :minutes %><br>
      <%= near_station.number_field :minutes %><br>
    <% end %>
  <p><%= f.submit '登録する' %></p>
<% end %>
