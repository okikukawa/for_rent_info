<h1>物件情報</h1>
<p>物件名：<%= @proparty.name %></p>
<p>賃料：<%= @proparty.price %>円</p>
<p>住所：<%= @proparty.address %></p>
<p>築年数：<%= @proparty.age %></p>
<p>備考：<%= @proparty.content %></p>
<hr>
<% n = 0 %>
<% @near_station.each do|near_station| %>
  <h2>最寄り駅<%= n += 1 %></h2>
  <p>路線名：<%= near_station.route_name %></p>
  <p>駅名：<%= near_station.station_name %></p>
  <p>徒歩分数：<%= near_station.minutes %></p>
<% end %>
<br>
<p>最寄り駅登録数：<%= @proparty.near_stations.index.count %></p>
<%= link_to '編集', edit_proparty_path(@proparty.id) %>
<label>｜</label>
<%= link_to '戻る', proparties_path %>
